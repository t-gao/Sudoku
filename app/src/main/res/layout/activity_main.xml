<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.tangni.sudoku.MainActivity">

    <RelativeLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/color_title">
        <TextView
            android:id="@+id/btn_new_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_2"
            android:textColor="@color/text_dark_grey"
            android:clickable="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical|left"
            android:padding="6dp"
            android:text="@string/new_game"
            android:onClick="onNewGameClick"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin_horizontal"
        android:layout_below="@id/title_bar"
        android:paddingTop="6dp"
        android:gravity="top|left"
        android:textSize="@dimen/text_3"
        android:textColor="@color/text_grey"
        />
    <TextView
        android:id="@+id/tv_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/title_bar"
        android:gravity="top|right"
        android:paddingRight="@dimen/margin_horizontal"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingLeft="6dp"
        android:textSize="@dimen/text_3"
        android:textColor="@color/text_grey"
        android:drawablePadding="2dp"
        android:drawableRight="@drawable/ic_pause"
        android:clickable="true"
        android:onClick="onPauseClick"
        />
    <me.tangni.sudoku.view.SudokuBoard
        android:id="@+id/sudodu_board"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/margin_horizontal"
        android:layout_marginRight="@dimen/margin_horizontal"
        android:layout_below="@id/tv_level"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content" />

    <!--<TextView-->
        <!--android:id="@+id/btn_start"-->
        <!--android:layout_width="wrap_content"-->

    <LinearLayout
        android:id="@+id/num_pad_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/num_pad_2"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_pencil"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:onClick="onBtnPencilClick"
            android:padding="4dp"
            android:clickable="true"
            android:textSize="12sp"
            android:textColor="@color/pencil_btn_text_selector"
            android:drawableTop="@drawable/ic_pencil_selector"
            android:drawablePadding="4dp"
            android:text="@string/pencil"
            android:gravity="center"/>

        <TextView
            android:id="@+id/btn_del"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:onClick="onBtnDelClick"
            android:padding="4dp"
            android:clickable="true"
            android:textColor="@color/pencil_btn_text_selector"
            android:drawableTop="@drawable/ic_eraser_selector"
            android:drawablePadding="4dp"
            android:textSize="12sp"
            android:text="@string/erase"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/num_pad_2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/btn_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:paddingLeft="4dp"
            android:onClick="onBtn1Click"
            android:clickable="true"
            android:textColor="@color/num_btn_selector"
            android:textSize="@dimen/num_btn"
            android:text="1"
            android:gravity="center"/>

        <TextView
            android:id="@+id/btn_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:onClick="onBtn2Click"
            android:clickable="true"
            android:textColor="@color/num_btn_selector"
            android:textSize="@dimen/num_btn"
            android:text="2"
            android:gravity="center"/>
        <TextView
            android:id="@+id/btn_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:onClick="onBtn3Click"
            android:clickable="true"
            android:textColor="@color/num_btn_selector"
            android:textSize="@dimen/num_btn"
            android:text="3"
            android:gravity="center"/>
        <TextView
            android:id="@+id/btn_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:onClick="onBtn4Click"
            android:clickable="true"
            android:textColor="@color/num_btn_selector"
            android:textSize="@dimen/num_btn"
            android:text="4"
            android:gravity="center"/>
        <TextView
            android:id="@+id/btn_5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:onClick="onBtn5Click"
            android:clickable="true"
            android:textColor="@color/num_btn_selector"
            android:textSize="@dimen/num_btn"
            android:text="5"
            android:gravity="center"/>
        <TextView
            android:id="@+id/btn_6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:onClick="onBtn6Click"
            android:clickable="true"
            android:textColor="@color/num_btn_selector"
            android:textSize="@dimen/num_btn"
            android:text="6"
            android:gravity="center"/>
        <TextView
            android:id="@+id/btn_7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:onClick="onBtn7Click"
            android:textColor="@color/num_btn_selector"
            android:textSize="@dimen/num_btn"
            android:clickable="true"
            android:text="7"
            android:gravity="center"/>
        <TextView
            android:id="@+id/btn_8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:onClick="onBtn8Click"
            android:textColor="@color/num_btn_selector"
            android:textSize="@dimen/num_btn"
            android:clickable="true"
            android:text="8"
            android:gravity="center"/>
        <TextView
            android:id="@+id/btn_9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:paddingRight="4dp"
            android:onClick="onBtn9Click"
            android:textColor="@color/num_btn_selector"
            android:textSize="@dimen/num_btn"
            android:clickable="true"
            android:text="9"
            android:gravity="center"/>
    </LinearLayout>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.tangni.sudoku.MainActivity">

    <me.tangni.sudoku.view.SudokuBoard
        android:id="@+id/sudodu_board"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sudodu_board"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:padding="4dp"
        android:onClick="onStartClick"
        android:text="START GAME"
        />

    <Button
        android:id="@+id/btn_restart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/btn_start"
        android:layout_toRightOf="@id/btn_start"
        android:layout_marginLeft="30dp"
        android:padding="4dp"
        android:onClick="onReStartClick"
        android:text="RESTART"
        />

    <LinearLayout
        android:id="@+id/num_pad_1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_above="@+id/num_pad_2"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btn_pencil"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:onClick="onBtnPencilClick"
            android:textSize="14sp"
            android:background="@drawable/pencil_selector"
            android:text="PENCIL"
            android:gravity="center"/>

        <Button
            android:id="@+id/btn_del"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:onClick="onBtnDelClick"
            android:textSize="14sp"
            android:text="DEL"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/num_pad_2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:onClick="onBtn1Click"
            android:text="1"
            android:gravity="center"/>
        <Button
            android:id="@+id/btn_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:onClick="onBtn2Click"
            android:text="2"
            android:gravity="center"/>
        <Button
            android:id="@+id/btn_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:onClick="onBtn3Click"
            android:text="3"
            android:gravity="center"/>
        <Button
            android:id="@+id/btn_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:onClick="onBtn4Click"
            android:text="4"
            android:gravity="center"/>
        <Button
            android:id="@+id/btn_5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:onClick="onBtn5Click"
            android:text="5"
            android:gravity="center"/>
        <Button
            android:id="@+id/btn_6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:onClick="onBtn6Click"
            android:text="6"
            android:gravity="center"/>
        <Button
            android:id="@+id/btn_7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:onClick="onBtn7Click"
            android:text="7"
            android:gravity="center"/>
        <Button
            android:id="@+id/btn_8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:onClick="onBtn8Click"
            android:text="8"
            android:gravity="center"/>
        <Button
            android:id="@+id/btn_9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:onClick="onBtn9Click"
            android:text="9"
            android:gravity="center"/>
    </LinearLayout>
</RelativeLayout>
